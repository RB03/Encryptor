<android.support.v7.widget.CardView
    android:id="@+id/cv_dec"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:clickable="true"
    android:longClickable="true"
  >

    <RelativeLayout
        android:id="@+id/card_view_card"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/ripple"
        android:minHeight="50dp"
        android:paddingBottom="12dp"
        android:paddingLeft="6dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp">

        <ImageView
            android:id="@+id/fileicon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:alpha="0.9"
            android:src="@drawable/ic_document_box"
            />

        <TextView
            android:id="@+id/filename_dec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="60dp"
            android:layout_toRightOf="@id/fileicon"
            android:paddingRight="30dp"
            android:singleLine="true"
            android:text="Tithgghhghhsggghghghgllllllllle"
            android:textSize="18sp"/>


        <ImageView
            android:id="@+id/lock_icon_dec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/checkBox2"
            android:layout_toStartOf="@+id/checkBox2"
            android:alpha="0.7"
            android:clickable="true"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="2dp"
            android:paddingTop="12dp"
            android:src="@drawable/ic_lock_outline_24dp"/>

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>

