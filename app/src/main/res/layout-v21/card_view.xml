<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:longClickable="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:id="@+id/card_view_card"
        android:padding="12dp"
        android:background="@drawable/ripple"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/filename"
            android:paddingRight="30dp"
            android:layout_centerVertical="true"
            android:textSize="22sp"
            android:layout_toRightOf="@+id/fileicon"
            android:text="Tithgghhghhsggghghghgllllllllle"
            android:singleLine="true"/>

        <ImageView
            android:layout_height="48dp"
            android:layout_width="48dp"
            android:padding="4dp"
            android:src="@drawable/document_lock_128"
            android:id="@+id/fileicon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/unlock_icon"
            android:src="@drawable/ic_lock_open_24dp"
            android:alpha="0.7"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>

